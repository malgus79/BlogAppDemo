<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="8dp"
    android:paddingVertical="8dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_picture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_profile_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/profile_picture"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="El Chicho" />

    <TextView
        android:id="@+id/tv_post_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="@dimen/size_min"
        app:layout_constraintStart_toEndOf="@id/profile_picture"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_name"
        tools:text="Hace 3 horas" />

    <TextView
        android:id="@+id/tv_post_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="4"
        app:layout_constraintTop_toBottomOf="@id/profile_picture"
        tools:text="This is a photo description" />

    <ImageView
        android:id="@+id/iv_post_image"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="H, 4:3"
        app:layout_constraintTop_toBottomOf="@id/tv_post_description"
        tools:background="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:id="@+id/linear_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/iv_post_image">

        <ImageView
            android:id="@+id/iv_like_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:src="@drawable/ic_favorite" />

        <TextView
            android:id="@+id/tv_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:gravity="center"
            tools:text="5 likes" />

    </LinearLayout>

    <ImageView
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_light"
        app:layout_constraintTop_toBottomOf="@id/linear_count"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_like_option"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Like"
        android:textColor="@color/grey"
        android:textSize="@dimen/size_min"
        app:icon="@drawable/ic_thumb_up_off_alt"
        app:iconTint="@color/grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_line"
        app:layout_constraintEnd_toStartOf="@id/btn_comment_option"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_comment_option"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Comment"
        android:textColor="@color/grey"
        android:textSize="@dimen/size_min"
        app:icon="@drawable/ic_mode_comment"
        app:iconTint="@color/grey"
        app:layout_constraintEnd_toStartOf="@id/btn_share_option"
        app:layout_constraintStart_toEndOf="@id/btn_like_option"
        app:layout_constraintTop_toBottomOf="@id/divider_line" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_share_option"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Share"
        android:textColor="@color/grey"
        android:textSize="@dimen/size_min"
        app:icon="@drawable/ic_share"
        app:iconTint="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_comment_option"
        app:layout_constraintTop_toBottomOf="@id/divider_line" />

    <ImageView
        android:id="@+id/divider_end"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grey_light"
        app:layout_constraintTop_toBottomOf="@id/btn_comment_option"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>